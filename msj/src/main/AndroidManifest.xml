<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
          package="com.msjBand.android.trip"

        >


    <uses-permission android:name="android.permission.RECEIVE_BOOT_COMPLETED"/>
    <application
        android:allowBackup="true"
        android:icon="@drawable/ic_launcher"
        android:theme="@style/AppTheme" >
        <activity
                android:screenOrientation="portrait"
            android:name="com.msjBand.android.trip.EventRecyclerActivity"
            android:label="@string/app_name"
     >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
                android:screenOrientation="portrait"
            android:name="com.msjBand.android.trip.EventActivity"
            android:label="@string/title_activity_event" >
        </activity>
        <activity android:name="com.msjBand.android.trip.EventPagerActivity"
                  android:label="Event"
                  android:screenOrientation="portrait"
                >

            <meta-data android:name="android.support.PARENT_ACTIVITY"
                       android:value="com.msjBand.android.trip.EventListActivity"
                    />
        </activity>

        <service android:name="com.msjBand.android.trip.NotifServicer"/>
        <receiver android:name="com.msjBand.android.trip.StartupReciever">
            <intent-filter>
                <action android:name="android.intent.action.BOOT_COMPLETED"/>
            </intent-filter>
        </receiver>


    </application>

</manifest>
